{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "outDir": "dist",

    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "noEmit": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
